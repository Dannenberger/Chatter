<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_primary">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/color_primary</item>
        <item name="android:width">112dp</item>
    </style>

    <style name="text_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">64dp</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="text_cell">
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="cell_horizontal">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>